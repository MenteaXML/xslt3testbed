  <body>
    <p>
      <table-wrap id="table1" position="float">
        <caption>
          <title>2 head cell, 2 body cell.</title>
        </caption>
        <table border="1">
          <colgroup>
            <col align="left" span="1"/>
            <col align="left" span="1"/>
          </colgroup>
          <thead>
            <tr>
              <td rowspan="1" colspan="1">Head</td>
              <td rowspan="1" colspan="1"></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td rowspan="1" colspan="1"></td>
              <td rowspan="1" colspan="1">Body</td>
            </tr>
          </tbody>
        </table>
      </table-wrap>
      <table-wrap id="table2" position="float">
        <caption>
          <title>2x3, with gap</title>
        </caption>
        <table  border="1">
          <colgroup>
            <col align="left" span="1"/>
            <col align="left" span="1"/>
            <col align="left" span="1"/>
          </colgroup>
          <thead>
            <tr>
              <td rowspan="1" colspan="1">Head</td>
              <td rowspan="1" colspan="1"></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td rowspan="2" colspan="1">1.1, 2.1</td>
              <td rowspan="1" colspan="1">1.2</td>
              <td rowspan="1" colspan="1">1.3</td>
            </tr>
            <tr>
              <td rowspan="1" colspan="1">2.2</td>
            </tr>
          </tbody>
        </table>
      </table-wrap>
    </p>
